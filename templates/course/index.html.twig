{% extends 'base.html.twig' %}

{% block title %}Список курсов/StudyOn{% endblock %}

{% block body %}
    <div class="row mx-5 mt-3 justify-content-center">


        <h1 class="text-center">Список курсов</h1>

        <table class="table">
            <thead>
            <tr class="fs-3">
                <th>Название</th>
                <th>Описание</th>

            </tr>
            </thead>
            <tbody>
            {% for course in courses %}

                <tr class="fs-5">
                    <td>
                        <a
                                class="text-decoration-none"
                                href="{{ path('app_course_show', {'id': course.id}) }}"
                        >
                            {{ course.name }}
                        </a>
                    </td>
                    <td>{{ course.description }}</td>

                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-outline-primary mt-3 fs-5" style="width: 200px" href="{{ path('app_course_new') }}">Добавить курс</a>
    </div>
{% endblock %}
