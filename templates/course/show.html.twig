{% extends 'base.html.twig' %}

{% block title %}{{ course.name }}{% endblock %}

{% block body %}
    <h1>Курс по:</h1>

    <table class="table">
        <tbody>

        <tr>
            <th>Название</th>
            <td>{{ course.name }}</td>
        </tr>
        <tr>
            <th>Описание</th>
            <td>{{ course.description }}</td>
        </tr>
        <th>Уроки:</th>
        {% for lesson in course.lessons | sort((a,b) => a.number <=> b.number) %}
            <tr>
                <td>
                    <a href="{{ path('app_lesson_show', {'id': lesson.id}) }}">{{ lesson.name }}</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_course_index') }}">back to list</a>

    <a href="{{ path('app_course_edit', {'id': course.id}) }}">edit</a>

    <a href="{{ path('app_lesson_new', {'id': course.id}) }}">add lesson</a>

    {{ include('course/_delete_form.html.twig') }}
{% endblock %}
